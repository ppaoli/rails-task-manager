<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task|  %>
  <li>
  <input type = "checkbox" onclick="return false;"
  <%= task.completed ? "checked" : "" %>
  />
  <%= link_to task.title, "../tasks/#{task.id}" %>
 <i class="fa-solid fa-trash"><%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></i>
 </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", "tasks/new" %>
